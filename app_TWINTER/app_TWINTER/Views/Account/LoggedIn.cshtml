@{
    ViewBag.Title = "LoggedIn";
}

<fieldset>
    @if (Session["user"] != null)
    {
        <legend>You are loged In and may use all site's functionality!!!</legend>
        <text>Welcome @Session["user"].ToString() </text>
    }
    else
    {
        @Url.Action("Account/Login");
    }
</fieldset>  