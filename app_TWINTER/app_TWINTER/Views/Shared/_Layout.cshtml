<!DOCTYPE html>
<html>
<head>
    <!-- Links for Carousel-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!-- Navbar -->
    <link rel="stylesheet" href="~/Content/NavbarStyle.css">
    <!-- Table -->
    <link rel="stylesheet" href="~/Content/TableStyle.css">
    <!-- Border-->
    <link rel="stylesheet" href="~/Content/Border.css">
    <!-- -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Basic Features-->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – TIDPP EXAM</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body background="~/Content/Images/GeneralBackground5.jpg">

    <!-- Navbar-->

    <nav class="navbar-custom navbar-expand-sm fixed-top">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>
            <a class="navbar-brand" href="/">TWINTER application</a>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">
                    @{
                        if (Session["UserId"] == null)
                        {
                            Html.ActionLink("Forbidden", "PermissionError", "Special", null, null);
                        }
                        else
                        {
                            <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { ID = Session["UserId"].ToString() }, null)</li>
                        }
                    }
                    <li class="nav-item"><a href="/Home/About" class="nav-link">About</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right mr-auto">
                    @{ if (Session["User"] == null)
                        {
                            <li class="nav-item"><a href="/Account/Login" id="registerLink" class="nav-link">Log In</a></li>
                            <li class="nav-item"><a href="/Account/Register" id="registerLink" class="nav-link">Sign Up</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a href="/Account/Logout" id="registerLink" class="nav-link">log Out</a></li>
                        }
                    }
                </ul>

            </div>
        </div>
    </nav>


    <!-- Carousel-->

    <div class="container" align="center">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
                <li data-target="#myCarousel" data-slide-to="5"></li>
                <li data-target="#myCarousel" data-slide-to="6"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <img src="~/Content/Logos/T.png" alt="T" style="width:40%; height:40%;">
                </div>

                <div class="carousel-item">
                    <img src="~/Content/Logos/W.png" alt="W" style="width:40%; height:40%;">
                </div>

                <div class="carousel-item">
                    <img src="~/Content/Logos/I.png" alt="I" style="width:40%; height:40%;">
                </div>

                <div class="carousel-item">
                    <img src="~/Content/Logos/N.png" alt="N" style="width:40%; height:40%;">
                </div>

                <div class="carousel-item">
                    <img src="~/Content/Logos/T.png" alt="T" style="width:40%; height:40%;">
                </div>

                <div class="carousel-item">
                    <img src="~/Content/Logos/E.png" alt="E" style="width:40%; height:40%;">
                </div>

                <div class="carousel-item">
                    <img src="~/Content/Logos/R.png" alt="R" style="width:40%; height:40%;">
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <!-- Footer-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; All rights reserved. Ganusceac Vlad & Timbalist Ana. @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
